{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist"
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }